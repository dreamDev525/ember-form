{{#if labelText}}
    {{#if yieldInsideLabel}}
        {{#em-form-label text=labelText viewName=labelViewName}}
            {{view controlView viewName=controlViewName model=model property=property}}
        {{/em-form-label}}
    {{else}}
        {{em-form-label text=labelText viewName=labelViewName}}
        {{view controlView viewName=controlViewName model=model property=property}}
    {{/if}}
{{else}}
    {{view controlView viewName=controlViewName model=model}}
{{/if}}


{{#if v_icons}}
    <span class="form-control-feedback"><i {{bind-attr class=v_icon}}></i></span>
{{/if}}

{{!No errors when layout is inline}}
{{#unless inline}}
    {{#if canShowErrors}}
        {{em-form-control-help text=help viewName=helpViewName}}
    {{/if}}
{{/unless}}